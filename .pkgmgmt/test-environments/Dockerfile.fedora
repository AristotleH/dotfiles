# Fedora test environment for chezmoi dotfiles
FROM fedora:latest

# Install basic dependencies including fish and zsh (needed for chezmoi to validate scripts)
RUN dnf install -y \
    curl \
    git \
    ca-certificates \
    fish \
    zsh \
    && dnf clean all

# Install chezmoi
RUN sh -c "$(curl -fsLS get.chezmoi.io)" -- -b /usr/local/bin

# Create a test user
RUN useradd -m -s /bin/bash testuser
USER testuser
WORKDIR /home/testuser

# Set up git config (required for chezmoi)
RUN git config --global user.email "test@example.com" && \
    git config --global user.name "Test User"

CMD ["/bin/bash"]
