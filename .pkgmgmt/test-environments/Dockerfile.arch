# Arch Linux test environment for chezmoi dotfiles
# Note: Official archlinux image doesn't support ARM64, using archlinux/archlinux instead
FROM --platform=linux/amd64 archlinux:latest

# Update system and install basic dependencies including fish and zsh (needed for chezmoi to validate scripts)
RUN pacman -Syu --noconfirm && \
    pacman -S --noconfirm \
    curl \
    git \
    ca-certificates \
    fish \
    zsh \
    && pacman -Scc --noconfirm

# Install chezmoi
RUN sh -c "$(curl -fsLS get.chezmoi.io)" -- -b /usr/local/bin

# Create a test user
RUN useradd -m -s /bin/bash testuser
USER testuser
WORKDIR /home/testuser

# Set up git config (required for chezmoi)
RUN git config --global user.email "test@example.com" && \
    git config --global user.name "Test User"

CMD ["/bin/bash"]
